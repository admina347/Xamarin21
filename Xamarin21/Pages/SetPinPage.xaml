<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin21.Pages.SetPinPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Установите Пин"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="firstPin" Keyboard="Numeric" VerticalOptions="Start" IsPassword="true" MaxLength="4" Completed="GoToSecondPin"/>
            <Entry x:Name="secondPin" Keyboard="Numeric" VerticalOptions="Start" IsPassword="true" MaxLength="4" Completed="SavePin"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>