<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Xamarin21.Pages.ImageListPage">

    <StackLayout>
        <Label Text="Изображения камеры" HorizontalOptions="Center" FontSize="Large"  Padding="30,10,30,10" StyleId="header" />
        <ListView x:Name="imageList"
       HasUnevenRows="True"
       ItemsSource="{Binding Images}"
       ItemSelected="imageList_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
               ImageSource="{Binding Image}"
               Text="{Binding Name}"
               Detail="{Binding Description}"
               TextColor="DodgerBlue"
               DetailColor="Gray"
               />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button BackgroundColor ="AliceBlue"  x:Name="addButton" Text="Добавить" StyleClass="btn-add"></Button>
    </StackLayout>
</ContentPage>